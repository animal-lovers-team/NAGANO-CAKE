<div class="container-xxl mt-5 mx-5">
  <h3><mark>配送先編集</mark></h3>

  <div class="address-edit row mt-5" style="margin-left: 0; margin-right: 0; padding-left: 0;">
    <%= form_with model: @address, url: customers_address_path(@address), class: "col-12", local: true do |f| %>
      <%= render "customers/shared/error_messages_address", model: f.object %>
      <%= f.label "郵便番号(ハイフンなし)", class: "col-2 mr-3" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", class: "col-2" %>
      <div class="w-100"></div>
      <%= f.label "住所", class: "col-2 mr-3" %>
      <%= f.text_field :address, autocomplete: "address", class: "col-4" %>
      <div class="w-100"></div>
      <%= f.label "宛名", class: "col-2 mr-3" %>
      <%= f.text_field :name, autocomplete: "name", class: "col-2" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success", class: "btn btn-success col-2 offset-md-2" %>
    <% end %>
  </div>
</div>