<div class="container">
<% provide(:title, "商品一覧") %>
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="product-headline head-line title_h2 text-center">
		<i class="fas fa-birthday-cake"></i> 商品一覧
		<span>
			(全<%= @products.total_count %>件中　<%= @products.count %>件)
		</span>
		</h2>
			<div class="col-10 clearfix product-box">
				<% @products.each do |product| %>
				  <%= render "product_each", product: product %>
				<% end %>
			</div>
			<div class="text-center"><%= paginate(@products) %></div>
	</div>
</div>
</div>

