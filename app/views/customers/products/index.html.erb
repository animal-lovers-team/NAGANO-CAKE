<% if @customer.errors.any? %>

  <div id="error_explanation">
    <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<% provide(:title, "商品一覧") %>
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="product-headline head-line title_h2 text-center">
		商品一覧
		<span>
			(全<%= @products.total_count %>件中　<%= @products.count %>件)
		</span>
		</h2>
			<div class="clearfix product-box">
				<% @products.each do |product| %>
				  <%= render "product_each", product: product %>
				<% end %>
			</div>
			<div class="text-center"><%= paginate(@products) %></div>
	</div>
</div>
